<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oswal.stockmangmentnew.ProductDetail.GPS_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GPS-tracking Details "
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="#F77F76"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Detail:"
            android:textSize="19dp"
            android:textStyle="bold"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Company Name"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="32dp"

            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:hint="Name"
            android:textSize="13dp"
            android:id="@+id/gps_compyame"
            android:background="@drawable/border_table" />




        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Sim Name"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:id="@+id/gps-simname"

            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:hint="Name"
            android:textSize="13dp"
            android:background="@drawable/border_table" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="Sim Recharg"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="16dp"
            android:hint="RS:"
            android:id="@+id/gps-recharge"
            android:layout_marginTop="20dp"
            android:textSize="13dp"
            android:background="@drawable/border_table" />
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="13dp"
            android:text="Sim Validity"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:hint="Date:"
            android:id="@+id/gps_validity"
            android:textSize="13dp"
            android:background="@drawable/border_table" />
        <Button
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="Submit"
            android:id="@+id/gps_subbtn1"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>