<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oswal.stockmangmentnew.ProductDetail.Wifidongle_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Name :"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"/>
            <Spinner
                android:id="@+id/wifiinternet_spinner1"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="16dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dongle Type :"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"/>
            <Spinner
                android:id="@+id/wifiinternet_spinner2"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="16dp" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Sim Detail:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
           />
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="Sim No."/>

        <EditText
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/dongle_simno"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_table"
            android:hint="No."
            android:textSize="13dp" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="Sim Name"/>

        <EditText
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/dongle_simname"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_table"
            android:hint="Name"
            android:textSize="13dp" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Sim Recharg"/>

        <EditText
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:hint="RS:"
            android:id="@+id/dongle_simrecharge"
            android:layout_marginTop="10dp"
            android:textSize="13dp"
            android:background="@drawable/border_table" />
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:text="Sim Validity"/>

        <EditText
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_table"
            android:hint="Date:"
            android:id="@+id/dongle_simvalidity"
            android:textSize="13dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="Submit"
            android:layout_marginTop="20dp"
            android:id="@+id/dongle_subbtn1"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>