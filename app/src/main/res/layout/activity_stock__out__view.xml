<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stockmangmentnew.Services.StockOut.Stock_Out_View">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock OUT View "
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="#F77F76"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="List of Customer name :"
            android:layout_marginTop="10dp"/>

        <ListView
            android:id="@+id/stockIn_listview"
            android:layout_width="match_parent"
            android:layout_height="633dp"
            android:layout_marginTop="0dp"
            android:divider="#f00"
            android:dividerHeight="1dp"
            android:listSelector="#2196F3"></ListView>



    </LinearLayout>
</ScrollView>