<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetail.Switches_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch details "
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="#F77F76"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name :"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DGSOL"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/switch_compyname1"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DLink"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/switch_compyname2"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retelok"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/switch_compyname3"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/switch_compyname4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch Type :"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Managed"
            android:textSize="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/switch_mang"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Un-Managed"
            android:textSize="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/switch_unmang"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:text="No.of Port :"
                android:textSize="15dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/switch_port1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:text="4"
                android:textSize="13dp" />

            <CheckBox
                android:id="@+id/switch_port2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:text="5"
                android:textSize="13dp" />

            <CheckBox
                android:id="@+id/switch_port3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:text="6"
                android:textSize="13dp" />

            <CheckBox
                android:id="@+id/switch_port4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:text="8"
                android:textSize="13dp" />

            <CheckBox
                android:id="@+id/switch_port5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:text="16"
                android:textSize="13dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/switch_port6"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="1dp"
                    android:text="24"
                    android:textSize="13dp" />

            <CheckBox
                android:id="@+id/switch_port7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"

                android:text="48"
                android:textSize="13dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>