<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Printer_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Printer Details "
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="#F77F76"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name :"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/printer_compyname1"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/printer_compyname2"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/printer_compyname3"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/printer_compyname4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Printer Type :"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Black/White"
            android:textSize="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/printer_type1"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laser"
            android:textSize="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/printer_type2"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="Submit"
            android:id="@+id/printer_subbtn1"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>