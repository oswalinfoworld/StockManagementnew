<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oswal.stockmangmentnew.Services.Items.Add_Item"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <TextView
        android:id="@+id/modelno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="150dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:text="Model No :"

        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/modelnoEditText"
        android:layout_width="match_parent"
        android:layout_height="32dp"

        android:hint="Enter model no."
        android:textSize="15dp"
        android:background="@drawable/border_table"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="130dp"/>

        <TextView
            android:id="@+id/serialno"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_marginTop="202dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:text="Serial no:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <EditText
            android:id="@+id/serialnoEditText"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="202dp"
            android:textSize="15dp"
            android:background="@drawable/border_table"
            android:hint="Enter serial no."/>



        <TextView
            android:id="@+id/category"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="90dp"
            android:text="ITEM Category:"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"

           android:entries="@array/select"
            android:layout_marginLeft="120dp"></Spinner>


        <TextView
            android:id="@+id/additem_date"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/textView2"
            android:textSize="15dp"
            android:layout_marginTop="252dp"
            android:text="Date:"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/additem_dateET"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="252dp"
            android:hint="Select"
            android:inputType="number"
            android:background="@drawable/border_table"
            android:textSize="15dp" />




        <Button
        android:id="@+id/submit_item"
        android:layout_width="210dp"
        android:layout_height="47dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="305dp"

        android:gravity="center"
        android:text="SUBMIT "
        />




    </RelativeLayout>

</ScrollView>
