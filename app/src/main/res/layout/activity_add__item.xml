<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services.Items.Add_Item"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

   <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD ITEM "
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="#F77F76"
        />


    <TextView
        android:id="@+id/modelno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="150dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:text="Model No :"

        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/modelnoEditText"
        android:layout_width="match_parent"
        android:layout_height="32dp"

        android:hint="Enter model no."
        android:textSize="15dp"
        android:background="@drawable/border_table"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="130dp"/>
        <TextView
        android:id="@+id/additem_dom"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:text="DOM:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/additem_DOM"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="250dp"
        android:textSize="15dp"
        android:background="@drawable/border_table"
        android:hint="Enter office no."/>
        <TextView
            android:id="@+id/serialno"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:text="Serial no:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <EditText
            android:id="@+id/serialnoEditText"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="200dp"
            android:textSize="15dp"
            android:background="@drawable/border_table"
            android:hint="Enter serial no."/>

        <TextView
        android:id="@+id/supplier"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="300dp"
        android:textSize="15dp"
        android:text="Supplier name:"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/suppliernameEditText"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="300dp"
        android:textSize="15dp"
        android:background="@drawable/border_table"
        android:hint="Enter supplier name"/>
        <TextView
            android:id="@+id/category"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="90dp"
            android:text="ITEM Category:"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"

           android:entries="@array/select"
            android:layout_marginLeft="120dp"></Spinner>

    <TextView
        android:id="@+id/mobileno"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textView2"
        android:textSize="15dp"
        android:layout_marginTop="350dp"
        android:text="Mobile no:"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/mobilenoEditText"
            android:layout_width="274dp"
            android:layout_height="32dp"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="350dp"
            android:maxLength="10"
            android:inputType="number"
            android:background="@drawable/border_table"
            android:hint="Enter mobile no."
            android:textSize="15dp" />
        <TextView
            android:id="@+id/additem_quan"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/textView2"
            android:textSize="15dp"
            android:layout_marginTop="400dp"
            android:text="Quantity:"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/additem_quanET"
            android:layout_width="274dp"
            android:layout_height="32dp"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="400dp"

            android:inputType="number"
            android:background="@drawable/border_table"
            android:hint="Enter quantity"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/additem_date"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/textView2"
            android:textSize="15dp"
            android:layout_marginTop="450dp"
            android:text="Date:"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/additem_dateET"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="450dp"
            android:text="Select"

            android:inputType="number"
            android:background="@drawable/border_table"

            android:textSize="15dp" />




        <Button
        android:id="@+id/submit_item"
        android:layout_width="210dp"
        android:layout_height="47dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="550dp"

        android:gravity="center"
        android:text="SUBMIT "
        />




    </RelativeLayout>

</ScrollView>
