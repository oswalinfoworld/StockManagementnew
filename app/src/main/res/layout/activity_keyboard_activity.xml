<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oswal.stockmangmentnew.ProductDetail.Keyboard_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keyboard details "
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#F77F76"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name :"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Microsoft"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/keyboard_compyname1"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logitech"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/keyboard_compyname2"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zebronics"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/keyboard_compyname3"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HP"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/keyboard_compyname4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keyboard Type :"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wire"
        android:textSize="13dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/keyboard_wire"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wireless"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/keyboard_wireless"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="Submit"
            android:id="@+id/keyboard_subbtn1"
            android:layout_gravity="center"/>
    </LinearLayout>


</ScrollView>