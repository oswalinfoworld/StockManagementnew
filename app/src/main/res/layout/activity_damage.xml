<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services.StockOut.Damage">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DAMAGE "
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:background="#F77F76"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="100dp"
            android:text="Item Scan"
            android:textSize="15dp"
            android:textStyle="bold" />


        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="130dp"

            android:layout_marginTop="90dp"
            android:background="@drawable/border_table"
            android:gravity="center"
            android:text="Scan">


        </Button>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="170dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="13dp">

                <TextView
                    android:id="@+id/damage_itmname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ITEM name :"
                    android:textSize="15dp"

                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/damage_itmnameET"
                    android:layout_width="249dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/border_table"
                    android:hint=""
                    android:textSize="15dp"


                    />


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="13dp">

                <TextView
                    android:id="@+id/damage_modelno"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"

                    android:text="Model no:"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/damage_modelnoET"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"

                    android:background="@drawable/border_table"
                    android:hint=""
                    android:textSize="15dp" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="13dp">

                <TextView
                    android:id="@+id/damage_date"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Date :"

                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/damage_dateET"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"

                    android:background="@drawable/border_table"

                    android:inputType="number"

                    android:textSize="15dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="13dp">

                <TextView
                    android:id="@+id/damage_cusname"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"

                    android:text="Customer name:"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/damage_cusnameET"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@drawable/border_table"

                    android:inputType="number"

                    android:textSize="15dp" />
            </TableRow>




        </TableLayout>

    </RelativeLayout>


</ScrollView>