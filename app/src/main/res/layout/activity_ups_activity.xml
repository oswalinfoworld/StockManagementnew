<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ProductDetail.UPS_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPS details "
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#F77F76"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPS Type :"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offline"
        android:textSize="13dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/ups_offchckbx"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online"
        android:textSize="13dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/ups_onchckbx"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Name :"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Su-Kam"
        android:textSize="13dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/ups_compyname1bx"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genus Power"
        android:textSize="13dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/ups_compyname2bx"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Microtek"
        android:textSize="13dp"

        android:layout_marginLeft="16dp"
        android:id="@+id/ups_compyname3bx"/>
    <CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="AmaraRaja"
    android:textSize="13dp"
    android:layout_marginLeft="16dp"
    android:id="@+id/ups_compyname5bx"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AmaraRaja"
        android:textSize="13dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/ups_compyname6bx"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capacity:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.6KVA"
        android:textSize="13dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/ups_copacity1bx"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.650KVA"
        android:textSize="13dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/ups_capacity2bx"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-1KVA"
        android:textSize="13dp"

        android:layout_marginLeft="16dp"
        android:id="@+id/ups_capacity3bx"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2KVA"
        android:textSize="13dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/ups_capacity4bx"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="Submit"
        android:id="@+id/ups_subbtn1"
       android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>