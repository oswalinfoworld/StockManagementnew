<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Processor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Processor details "
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="#F77F76"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Processr type :"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C2D"
                android:textSize="13dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/router_process1"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DC"
                android:textSize="13dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/router_process2"/>


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="i3"
                android:textSize="13dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/router_process4"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="i5"
                android:textSize="13dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/router_process5"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="i7"
                android:textSize="13dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/router_process3"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generation:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="13dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/router_gen1"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="13dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/router_gen2"/>


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="13dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/router_gen3"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="13dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/router_gen4"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="13dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/router_gen5"/>
        </LinearLayout>


        <Button
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="Submit"
            android:layout_marginTop="20dp"
            android:id="@+id/processor_subbtn1"
            android:layout_gravity="center"/>
    </LinearLayout>


</ScrollView>