<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oswal.stockmangmentnew.Services.Return.Repaire">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="100dp"
        android:text="Item Scan"
        android:textSize="15dp"
        android:textStyle="bold" />


    <Button
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/repair_scnbtn"
        android:layout_marginTop="90dp"
        android:onClick="scanBar"
        android:gravity="center"
        android:text="Scan">


    </Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="130dp">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/repaire_radiogrp1"
                android:layout_marginTop="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Repair"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:id="@+id/printer_brand1"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="UN-Repair"
                android:textSize="13dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="80dp"
                android:id="@+id/printer_brand2"/>
            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:paddingTop="40dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:paddingTop="13dp"
            android:gravity="center"
            android:layout_marginLeft="25dp">

            <TextView
                android:id="@+id/damage_resn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason:"

                android:textSize="15dp"

                android:textStyle="bold" />

            <EditText
                android:id="@+id/repaire_resonET"
                android:layout_width="200dp"
                android:layout_height="55dp"

                android:layout_marginRight="5dp"
                android:background="@drawable/border_table"
                android:hint="Enter reason for repair"
                android:textSize="15dp"


                />


        </TableRow>
        </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="90dp"

        android:orientation="horizontal">

    <Button
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/repair_addto_stocinbtn"
        android:layout_marginTop="205dp"
        android:background="@drawable/border_table"

        android:text="ADD StockIN" />
        <Button
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:id="@+id/repair_goto_custbtn"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="205dp"
            android:background="@drawable/border_table"

            android:text="Go to customoer" />

    </LinearLayout>

    <TableLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:paddingTop="150dp">


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/damage_itmname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ITEM name :"
                android:textSize="15dp"

                android:textStyle="bold" />

            <EditText
                android:id="@+id/repaire_itmnameET"
                android:layout_width="200dp"
                android:layout_height="27dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border_table"
                android:hint=""
                android:textSize="15dp"


                />


        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:paddingTop="13dp">

            <TextView
                android:id="@+id/damage_modelno"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                android:text="Model no:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/repaire_modelnoET"
                android:layout_width="match_parent"
                android:layout_height="27dp"

                android:background="@drawable/border_table"
                android:hint=""
                android:textSize="15dp" />

        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:paddingTop="13dp">

            <TextView
                android:id="@+id/repair_billno"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                android:text="Bill no:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/repair_billnoET"
                android:layout_width="200dp"
                android:layout_height="27dp"
                android:gravity="center"

                android:background="@drawable/border_table"
                android:hint=""
                android:textSize="15dp" />

        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:paddingTop="13dp">

            <TextView
                android:id="@+id/damage_date"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Date :"

                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/repair_dateET"
                android:layout_width="match_parent"
                android:layout_height="27dp"

                android:background="@drawable/border_table"

                android:inputType="number"

                android:textSize="15dp" />
        </TableRow>

                      <TableRow
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/damage_cusname"
                android:layout_width="100dp"
                android:layout_height="38dp"

                android:text="Customer name :"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/repair_cusnameET"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/border_table"

                android:textSize="15dp" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:paddingTop="10dp">

            <TextView

                android:layout_width="100dp"
                android:layout_height="38dp"
                android:id="@+id/repair_storeLoc"
                android:text="Storage Location:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/repair_storeLocET"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/border_table"
                android:textSize="15dp" />
        </TableRow>



    </TableLayout>
    <Button
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_marginLeft="100dp"
        android:text="Submit"
        android:id="@+id/repaire_subtn"
        android:gravity="center"
        android:layout_marginTop="650dp"/>




    </RelativeLayout>

</ScrollView>