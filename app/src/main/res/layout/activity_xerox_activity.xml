<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetail.xerox_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xreox Machin Details "
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#F77F76"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Detail:"
        android:textSize="19dp"
        android:textStyle="bold"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Company Name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="32dp"

        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:hint="Name"
        android:textSize="13dp"
        android:id="@+id/xerox-compyame"
        android:background="@drawable/border_table" />




    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Model no"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/xerox-modelno"

        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:hint="Enter model no "
        android:textSize="13dp"
        android:background="@drawable/border_table" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PPM :"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/xerox_ppm1"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/xerox_ppm2"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/xerox_ppm3"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/xreox_ppm4"/>
    </LinearLayout>
</ScrollView>